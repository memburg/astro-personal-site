        <Work containerPosition="bottom right">
        </Work>

        <Work containerPosition="bottom left">
        </Work>

        <Work containerPosition="top right">
        </Work>

        <Work containerPosition="top left">
        </Work>
    </div> -->
</Layout>

<style>
    .container {
        width: 100%;
        height: 100%;
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        grid-template-rows: repeat(2, 1fr);
        gap: 20px;
        position: relative;
    }
</style>
