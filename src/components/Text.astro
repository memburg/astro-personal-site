---
export interface Props {
    title: string;
}

const { title } = Astro.props;
---

<div>
    <h1>{title}</h1>
    <div class="text">
        <slot />
    </div>
</div>

<style>
    div {
        width: 100%;
        height: fit-content;
        align-self: center;
        animation: fadeIn 2s;
        display: flex;
        flex-flow: column;
    }

    h1 {
        font-family: "Bebas Neue", cursive;
        letter-spacing: 5px;
        color: #141414;
        font-size: 7rem;
        text-align: center;
    }

    .text {
        width: 80%;
    }
</style>

<style is:global>
    h3, p {
        text-align: left;
        text-align: justify;
        font-family: 'Roboto', sans-serif;
        color: #222222;
    }

    p {
        font-size: 1.5rem;
        font-weight: 300;
    }

    h3 {
        font-size: 1.6rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.2rem;
    }

    h3 span {
        color: #303030;
        font-size: 1.1rem;
    }
</style>
