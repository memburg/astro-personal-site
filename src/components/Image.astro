---
export interface Props {
    src: string;
    alt: string;
	jsIdentifier: string;
}

const { src, alt, jsIdentifier } = Astro.props;
---

<img src={src} alt={alt} js-identifier={jsIdentifier} />

<style>
    :root {
		--image-width: 100%;
		--image-height: auto;
	}

	img {
		width: var(--image-width);
		height: var(--image-height);
        align-self: center;
		transition: opacity 1s ease;
	}
</style>
