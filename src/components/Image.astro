---
export interface Props {
	src: string;
	alt: string;
}

const { src, alt } = Astro.props;
---

<img src={src} alt={alt} />

<style>
	:root {
		--image-width: 100%;
		--image-height: auto;
	}

	img {
		width: var(--image-width);
		height: var(--image-height);
		align-self: center;
		animation: fadeIn 2s;
		justify-self: center;
	}

	@media (orientation: portrait) {
		img {
			width: 80%;
			grid-row: 2;
		}
	}
</style>
