---
export interface Props {
    containerPosition: string;
}

const { containerPosition } = Astro.props;
---

<div class="container">
    <div class={`content ${containerPosition}`}></div>
</div>

<style>
    .container {
        width: 100%;
        height: 100%;
        position: relative;
        animation: fadeIn 2s;
    }

    .content {
        position: absolute;
        width: 70%;
        height: 70%;
        background-color: rgb(206, 165, 245);
    }

    .bottom {
        bottom: 0;
    }

    .top {
        top: 0;
    }

    .left {
        left: 0;
    }

    .right {
        right: 0;
    }
</style>
